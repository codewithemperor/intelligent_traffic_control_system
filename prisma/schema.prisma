generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Junction {
  id        String   @id @default(cuid())
  name      String
  location  String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roads Road[]
}

model Road {
  id           String    @id @default(cuid())
  name         String
  direction    Direction
  vehicleCount Int       @default(0)
  maxCapacity  Int       @default(50)
  junctionId   String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  junction     Junction      @relation(fields: [junctionId], references: [id])
  trafficLight TrafficLight?
}

model TrafficLight {
  id       String @id @default(cuid())
  roadId   String @unique
  status   Status @default(RED)
  timing   Json // {red: 30, yellow: 5, green: 25}
  priority Int    @default(1)

  road Road @relation(fields: [roadId], references: [id])
}

enum Status {
  RED
  YELLOW
  GREEN
}

enum Direction {
  NORTH
  SOUTH
  EAST
}
